<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetApp.LoadGamePage"
             Title="LOAD GAME">
    <ContentPage.Content>
        <StackLayout Margin="0,0,0,0" BackgroundColor="DarkViolet">


            <StackLayout VerticalOptions="CenterAndExpand" Padding="40,10,40,10"  >
                <BoxView Color="DodgerBlue" HorizontalOptions="Center" VerticalOptions="Center"
                         Margin="10,30,10,30">
                    
                </BoxView>
                <Label Text="MY PLANETS" 
                       FontSize="Large" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>